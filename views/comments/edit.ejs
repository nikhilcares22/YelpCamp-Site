<%- include ('../partials/header') %>
    <h1 style="text-align: center;">Edit Comment
    </h1>
    <div class="container">
        <div class="row">
            <div class="common_form">
                <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= comment.text%>" name="comment[text]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a class="btn btn-sm btn-outline-info" href="/campgrounds/<%=campground_id %>">Back</a>
            </div>
        </div>
    </div>

    <%- include ('../partials/footer') %>