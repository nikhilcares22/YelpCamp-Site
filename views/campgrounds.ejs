<%- include ('partials/header') %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1 class="font-weight-bold">Welcome To YelpCamp!!</h1>
                <p>View Our Handpicked Campgrounds</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campgrounds Here!!</a>
                </p>
            </div>
        </header>

        <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% campgrounds.forEach(e => { %>
                <div class="col-md-3 col-sm-6">
                    <div class=" card">
                        <img src="<%= e.image %> " alt="" class="img-thumbnail">
                        <div class="caption card-body">
                            <h4>
                                <%= e.name %>
                            </h4>
                        </div>
                    </div>
                </div>
                <% });  %>
        </div>

    </div>

    <%- include ('partials/footer') %>