<%- include ('../partials/header') %>
    <h1 style="text-align: center;">Edit
        <%= campground.name %>
    </h1>
    <div class="container">
        <div class="row">
            <div class="common_form">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=campground.name %> " name="campground[name]">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="number" value="<%=campground.price %>" name="campground[price]" step="0.01" min="0.1">
                    </div>

                    <div class="form-group">
                        <input class="form-control" value="<%=campground.image %> " type="text" placeholder="Image URL" name="campground[image]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" value="<%=campground.description  %> " type="text" placeholder="Description" name="campground[description]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a class="btn btn-sm btn-outline-info" href="/campgrounds/<%= campground._id  %> ">Back</a>
            </div>
        </div>
    </div>

    <%- include ('../partials/footer') %>