<%- include ('./partials/header') %>

    <div class="jumbotron login_signup">

        <h1 class="text-center">Sign Up here</h1>
        <div class="container common_form">
            <form class="" action="/register" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <div id="signup_div">
                    <button class="btn btn-primary" id="signup_btn" type="submit">Sign up</button>
                    <a href="/campgrounds" class="btn btn-outline-secondary" id="signup_back_btn">Back</a>
                </div>
            </form>
        </div>
    </div>

    <%- include ('./partials/footer') %>